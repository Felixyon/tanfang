.panel_all{
  background-color: #f6f6f6;
}
.panel_outer{
  width: 750rpx;
  height: 450rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  margin-bottom:30rpx;
  display: flex;
  text-align: center;
  border-radius: 20rpx;
}
.text_recommend{
  position: absolute;
  font-size: 30rpx;
  left: 5%;
}
.text_more{
  font-size: 26rpx;
  color: #2db07a;
  position:absolute;
  right: 5%;
}
.rows{
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}
.ip_img{
  width: 200rpx;
  height: 266rpx;
  margin:55rpx 0% 0% 0%;
  overflow: hidden;
}
.ip_img image{
  width: 100%;
  overflow: hidden;
  border-radius: 5px;
}
.ip_info{
  text-align: center;
  display: flex;
  flex-direction:column;
  font-size: 30rpx;
  line-height: 36rpx;
  margin-top: 10rpx;
  font-weight: 10;
}
.ip_list{
  float: left;
  margin-left: 5%;
  margin-top:1%;
}
.text_author{
  font-size: 24rpx;
  font-weight: 5;
}
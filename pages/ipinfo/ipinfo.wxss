/* pages/ipinfo/ipinfo.wxss */
.ipshortdes{
  width: 100%;
  margin-top: 1px;
  overflow-x: hidden;
}
.ip-top{
  width: 100%;
  height: 250px;
  background-color: #2db07a;
  overflow: hidden;
}
.ip-img{
  width: 200rpx;
  height: 266rpx;
  margin:15px 10px 0px 40px;
  overflow: hidden;
  border-radius: 4px;
  border: 4px solid #fff;
  float: left;
}
.ip-top-right{
  float: left;
  margin: 0;
}
.ip-basicinfo{
  float: left;
  display: block;
  margin-top: 10px;
  width: auto;
  height: 100px;
}
.ip-name{
  color: #fff;
  font-size: 25px;
  margin-top: 20px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.ip-author{
  color: #fff;
  font-size: 18px;
  margin-top: 5px;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.ip-tags{
 display: block;
 margin: 0px;
 margin-top: 115px;
}
.ip-tag{
  margin-left: 10px;
  padding:2px 6px;
  background-color: #fff;
  border-radius: 10px;
  border: 2px solid #fff;
  font-size: 18px;
  color: #2db07a;
}
.numberblock{
  width: 80%;
  clear: both;
  margin-top: 10px;
  margin-left: 40px;
  float: left;
  background-color: #fff;
  border-radius: 8px;
  padding:0px 5px;
  padding-left: 10px;
}
.number{
  width: 24%;
  float: left;
  margin: 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #2db07a;
  border-right: 1px solid #2db07a;
  border-left: 1px solid #2db07a;
}
.tags{
  font-weight: bold;
  font-size: 16px;
}
.decorb{
  position: absolute;
  left: 41px;
  color: #6d9d88;
}
.decora{
  position: absolute;
  right: 16px;
  color: #6d9d88;
}
.ip-intro{
  width: 100%;
  background-color: #238a60;
  color: #fff;
  align-items:center;
  margin: 0px;
  font-size: 14px;
  padding: 10px;
  word-break:keep-all;
  word-wrap:break-word;
  text-align: center;
  overflow-x: hidden;
}
.title{
font-size: 16px;
display: flex;
flex-direction: column;
align-items:center;
text-align: center;
font-weight: bold;
margin-bottom: 5px;
}
.ip-middle{
  text-align: center;
  background-color: #2db07a;
  padding-bottom: 4px;
}
.ip-forcast{
  width: 90%;
  margin:10px auto;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  align-content:center;
  background-color: #2db07a;
}
.fbutton{
  width: 30%;
  margin: 5px auto;
  align-items: center;
  word-break: break-all;
  word-wrap: break-word;
  font-size: 16px;
  color: #fff;
  display: flex;
  flex-direction: column;
  padding: 3px;
}
.ftitle{
  font-weight: bold;
}
.canvas{
  margin-top: 10px;
  width: 100%;
  height: 200px;
}
.zhishulist{
 width: 90%;
 margin:10px auto 0px 30px;
 text-align: center;
}
.zhishu-list{
  width: 30%;
  float: left;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0px 2% 15px auto;
  border-radius: 4px;
  border: 1px solid #2db07a;
}
.nu{
  color: #2db07a;
  margin-left: 10px;
}
.ip-ciyun-title{
width: 100%;
height: 30px;
background-color: #238a60;
color: #fff;
font-weight: bold;
text-align: center;
clear: both;
font-size: 16px;
padding-top: 5px;
margin-top: 5px;
}
.ciyun{
  width: 100%;
  height: 200px;
  overflow: hidden;
  padding: 10px;
  background-color: #f9f9f9;
}
.ci{
  float: left;
  margin:10px;
  line-height: 10px;
  text-align: center;
}
.ciword{
  border-radius: 8px;
  font-size: 15px;
  padding: 2px;
  font-weight: bold;
}